<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    tools:context=".fragments.Profile">
    <LinearLayout
        android:id="@+id/userName"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/userNameText"
            android:text="Username:"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/userNameValue"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/userNameEditValue"
            android:src="@drawable/ic_edit"
            android:background="@android:color/transparent"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userEmail"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userName">
        <TextView
            android:id="@+id/userEmailText"
            android:text="Email:"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/userEmailValue"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/userEmailEditValue"
            android:src="@drawable/ic_edit"
            android:background="@android:color/transparent"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userPhone"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userEmail">
        <TextView
            android:id="@+id/userPhoneText"
            android:text="Phone:"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/userPhoneValue"
            android:inputType="numberDecimal"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/userPhoneEditValue"
            android:src="@drawable/ic_edit"
            android:background="@android:color/transparent"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/updateProfileData"
        android:text="Сохранить изменения"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>